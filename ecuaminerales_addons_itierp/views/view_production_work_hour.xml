<?xml version="1.0"?>

<odoo>
    <!-- MENÚ SECUNDARIO -->
    <menuitem name="HORAS EMPLEADOS" id="men_sec_mod" parent="men_pri_mod"/>


    <!-- VISTA FORM: Modelo -->
    <record model="ir.ui.view" id="view_act_bodega_form">
        <field name="name">view.production.work.hour.form</field>
        <field name="model">production.work.hour</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="bodega">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" icon="fa-long-arrow-up" name="load_information_of_file"
                                string="CARGAR HORAS" states="draft"
                                class="btn btn-primary"/>
                        <button type="object" icon="fa-arrow-circle-o-left" name="purge_data"
                                string="CARGAR HORAS" states="draft"
                                class="btn btn-primary"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="sequence"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="document" filename="file_name"/>
                            <field name="file_name" invisible="1"/>
                        </group>
                        <group>
                            <field name="search_selection" widget="radio"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Datos Relog">
                            <div class="alert alert-info" role="alert" style="margin-bottom:0px;"
                                 attrs="{'invisible': [('message','=',False)]}">
                                <h5 class="text-center">
                                    <field name="message" readonly="1"/>
                                </h5>
                            </div>
                            <field name="hour_production_ids" nolabel="1">
                                <tree create="0" editable="bottom" default_order="fecha_time, employee_id">
                                    <field name="employee_id"/>
                                    <field name="codigo_clock"/>
                                    <field name="departamento"/>
                                    <field name="fecha_time"/>
                                    <field name="hour" widget="float_time"/>
                                    <field name="dispositivo"/>
                                    <field name="dif"/>
                                    <field name="delete" widget="toggle_button"/>
                                </tree>
                            </field>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- FIN VISTA FORM: MODELO -->

    <!-- VISTA TREE: MODELO -->
    <record model="ir.ui.view" id="view_act_bodega_tree">
        <field name="name">view.production.work.hour.tree</field>
        <field name="model">production.work.hour</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="bodega">
                <field name="sequence"/>
            </tree>
        </field>
    </record>
    <!-- FIN VISTA TREE: MODELO -->

    <!-- MODELO: MODELO -->
    <record model="ir.actions.act_window" id="action_act_btn">
        <field name="name">HORAS EMPLEADOS</field>
        <field name="res_model">production.work.hour</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- FIN MODELO: MODELO -->

    <!-- MENÚ SECUNDARIO: MODELO -->
    <menuitem name="CALCULO DE HORAS" id="menu_act_bodega" action="action_act_btn" parent="men_sec_mod"/>

</odoo>
